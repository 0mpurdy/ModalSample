<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ModalSample.AlternativeModalPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Label
                HorizontalOptions="CenterAndExpand"
                Text="AlternativeModalPage"
                VerticalOptions="CenterAndExpand" />

            <Button Clicked="PushModal_Clicked" Text="Push original modal" />
            <Button Clicked="PopModalButton_Clicked" Text="Pop modal page" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>